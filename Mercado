package Produtos;

public class Produto {
     String nome;
     String codigo;
     double preco;
     
    @Override
    public boolean equals(Object obj) {
        if (this == obj) {
            return true;
        }
        if (obj == null ) {
            return false;
        }
        Produto produto = (Produto) obj;
        return codigo.equals(produto.codigo);
    }

    @Override
    public int hashCode() {
        return codigo.hashCode();
    }
}
