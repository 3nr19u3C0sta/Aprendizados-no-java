package Produtos;

public class ProdutoComTamanho extends Produto{
	int tamanho;
	public boolean equals(Object obj) {
		ProdutoComTamanho objeto = (ProdutoComTamanho) obj;
		return (this.tamanho == objeto.tamanho)?true:false;
	}
	@Override
	public int hashCode() {
		
		return super.hashCode();
	}
}
